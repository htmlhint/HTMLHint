{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title": "Schema for .htmlhintrc",
  "type": "object",
  "$defs": {
    "error-severity": {
      "title": "Severity: Error",
      "description": "Hints for this rule will be shown as error",
      "const": "error"
    },
    "warning-severity": {
      "title": "Severity: Warning",
      "description": "Hints for this rule will be shown as warning",
      "const": "warn"
    },
    "off-severity": {
      "title": "Severity: Off",
      "description": "Hints for this rule will not be shown",
      "const": "off"
    },
    "off-severity-array": {
      "type": "array",
      "items": [{ "$ref": "#/$defs/off-severity" }],
      "minItems": 1,
      "maxItems": 1,
      "additionalItems": false
    },
    "severity": {
      "title": "Severity",
      "oneOf": [
        { "$ref": "#/$defs/error-severity" },
        { "$ref": "#/$defs/warning-severity" },
        { "$ref": "#/$defs/off-severity" }
      ]
    },
    "rule-without-option": {
      "oneOf": [
        { "$ref": "#/$defs/severity" },
        {
          "type": "array",
          "items": [{ "$ref": "#/$defs/severity" }],
          "minItems": 1,
          "maxItems": 1,
          "additionalItems": false
        }
      ]
    }
  },
  "properties": {
    "extends": {
      "title": "Extensions",
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["htmlhint:recommended", "htmlhint:legacy"]
      }
    },
    "rules": {
      "title": "Rules",
      "type": "object",
      "properties": {
        "alt-require": {
          "title": "Rule: alt-require",
          "description": "The 'alt' attribute of an '&lt;img&gt;' element must be present and 'alt' attribute of 'area[href]' and 'input[type=image]' must have a value.",
          "$ref": "#/$defs/rule-without-option"
        },
        "attr-lowercase": {
          "title": "Rule: attr-lowercase",
          "description": "All attribute names must be in lowercase.",
          "oneOf": [
            { "$ref": "#/$defs/severity" },
            { "$ref": "#/$defs/off-severity-array" },
            {
              "type": "array",
              "items": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/error-severity" },
                    { "$ref": "#/$defs/warning-severity" }
                  ]
                },
                {
                  "title": "Options",
                  "type": "object",
                  "properties": {
                    "exceptions": {
                      "title": "Option: exceptions",
                      "type": "array",
                      "items": "string"
                    }
                  }
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "attr-no-duplication": {
          "title": "Rule: attr-no-duplication",
          "description": "Elements cannot have duplicate attributes.",
          "$ref": "#/$defs/rule-without-option"
        },
        "attr-no-unnecessary-whitespace": {
          "title": "Rule: attr-no-unnecessary-whitespace",
          "description": "No spaces between attribute names and values.",
          "oneOf": [
            { "$ref": "#/$defs/severity" },
            { "$ref": "#/$defs/off-severity-array" },
            {
              "type": "array",
              "items": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/error-severity" },
                    { "$ref": "#/$defs/warning-severity" }
                  ]
                },
                {
                  "title": "Options",
                  "type": "object",
                  "properties": {
                    "exceptions": {
                      "title": "Option: exceptions",
                      "type": "array",
                      "items": "string"
                    }
                  }
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "attr-sorted": {
          "title": "Rule: attr-sorted",
          "description": "Attribute tags must be in proper order.",
          "$ref": "#/$defs/rule-without-option"
        },
        "attr-unsafe-chars": {
          "title": "Rule: attr-unsafe-chars",
          "description": "Attribute values cannot contain unsafe chars.",
          "$ref": "#/$defs/rule-without-option"
        },
        "attr-value-double-quotes": {
          "title": "Rule: attr-value-double-quotes",
          "description": "Attribute values must be in double quotes.",
          "$ref": "#/$defs/rule-without-option"
        },
        "attr-value-not-empty": {
          "title": "Rule: attr-value-not-empty",
          "description": "All attributes must have values.",
          "$ref": "#/$defs/rule-without-option"
        },
        "attr-value-single-quotes": {
          "title": "Rule: attr-value-single-quotes",
          "description": "Attribute values must be in single quotes.",
          "$ref": "#/$defs/rule-without-option"
        },
        "attr-whitespace": {
          "title": "Rule: attr-whitespace",
          "description": "All attributes should be separated by only one space and not have leading/trailing whitespace.",
          "oneOf": [
            { "$ref": "#/$defs/severity" },
            { "$ref": "#/$defs/off-severity-array" },
            {
              "type": "array",
              "items": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/error-severity" },
                    { "$ref": "#/$defs/warning-severity" }
                  ]
                },
                {
                  "title": "Options",
                  "type": "object",
                  "properties": {
                    "exceptions": {
                      "title": "Option: exceptions",
                      "type": "array",
                      "items": "string"
                    }
                  }
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "doctype-first": {
          "title": "Rule: doctype-first",
          "description": "Doctype must be declared first.",
          "$ref": "#/$defs/rule-without-option"
        },
        "doctype-html5": {
          "title": "Rule: doctype-html5",
          "description": "Invalid doctype. Use: ''&lt;!DOCTYPE html'&gt;'",
          "$ref": "#/$defs/rule-without-option"
        },
        "head-script-disabled": {
          "title": "Rule: head-script-disabled",
          "description": "The '&lt;script'&gt; tag cannot be used in a '&lt;head'&gt; tag.",
          "$ref": "#/$defs/rule-without-option"
        },
        "href-abs-or-rel": {
          "title": "Rule: href-abs-or-rel",
          "description": "An href attribute must be either absolute or relative.",
          "oneOf": [
            { "$ref": "#/$defs/severity" },
            { "$ref": "#/$defs/off-severity-array" },
            {
              "type": "array",
              "items": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/error-severity" },
                    { "$ref": "#/$defs/warning-severity" }
                  ]
                },
                {
                  "title": "Options",
                  "type": "object",
                  "properties": {
                    "mode": {
                      "title": "Option: mode",
                      "oneOf": [
                        {
                          "title": "Option: mode absolute",
                          "description": "The value of the href attribute must be absolute.",
                          "const": "absolute"
                        },
                        {
                          "title": "Option: mode relative",
                          "description": "The value of the href attribute must be relative.",
                          "const": "relative"
                        }
                      ]
                    }
                  }
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "id-class-ad-disabled": {
          "title": "Rule: id-class-ad-disabled",
          "description": "The id and class attributes cannot use the ad keyword, it will be blocked by adblock software.",
          "$ref": "#/$defs/rule-without-option"
        },
        "id-class-value": {
          "title": "Rule: id-class-value",
          "description": "The id and class attribute values must meet the specified rules.",
          "oneOf": [
            { "$ref": "#/$defs/severity" },
            { "$ref": "#/$defs/off-severity-array" },
            {
              "type": "array",
              "items": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/error-severity" },
                    { "$ref": "#/$defs/warning-severity" }
                  ]
                },
                {
                  "title": "Options",
                  "type": "object",
                  "oneOf": [
                    {
                      "properties": {
                        "mode": {
                          "title": "Option: mode",
                          "enum": ["underline", "dash", "hump"]
                        }
                      },
                      "additionalProperties": false
                    },
                    {
                      "properties": {
                        "regId": {
                          "title": "Option: regId",
                          "type": "string"
                        },
                        "message": {
                          "title": "Option: message",
                          "type": "string"
                        }
                      },
                      "additionalProperties": false
                    }
                  ]
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "id-unique": {
          "title": "Rule: id-unique",
          "description": "The value of id attributes must be unique.",
          "$ref": "#/$defs/rule-without-option"
        },
        "inline-script-disabled": {
          "title": "Rule: inline-script-disabled",
          "description": "Inline script cannot be used.",
          "$ref": "#/$defs/rule-without-option"
        },
        "inline-style-disabled": {
          "title": "Rule: inline-style-disabled",
          "description": "Inline style cannot be used.",
          "$ref": "#/$defs/rule-without-option"
        },
        "input-requires-label": {
          "title": "Rule: input-requires-label",
          "description": "All [ input ] tags must have a corresponding [ label ] tag.",
          "$ref": "#/$defs/rule-without-option"
        },
        "script-disabled": {
          "title": "Rule: script-disabled",
          "description": "The '&lt;script'&gt; tag cannot be used in a '&lt;head'&gt; tag.",
          "$ref": "#/$defs/rule-without-option"
        },
        "space-tab-mixed-disabled": {
          "title": "Rule: space-tab-mixed-disabled",
          "description": "Do not mix tabs and spaces for indentation.",
          "oneOf": [
            { "$ref": "#/$defs/severity" },
            { "$ref": "#/$defs/off-severity-array" },
            {
              "type": "array",
              "items": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/error-severity" },
                    { "$ref": "#/$defs/warning-severity" }
                  ]
                },
                {
                  "title": "Options",
                  "type": "object",
                  "oneOf": [
                    {
                      "properties": {
                        "mode": {
                          "title": "Option: mode",
                          "description": "Use tab for indentation.",
                          "const": "tab"
                        }
                      }
                    },
                    {
                      "properties": {
                        "mode": {
                          "title": "Option: mode",
                          "description": "Use space for indentation.",
                          "const": "space"
                        },
                        "size": {
                          "title": "Option: size",
                          "type": "integer",
                          "exclusiveMinimum": 0,
                          "maximum": 8,
                          "default": 4
                        }
                      }
                    }
                  ]
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "spec-char-escape": {
          "title": "Rule: spec-char-escape",
          "description": "Special characters must be escaped.",
          "$ref": "#/$defs/rule-without-option"
        },
        "src-not-empty": {
          "title": "Rule: src-not-empty",
          "description": "The src attribute of an img, script or link must have a value.",
          "$ref": "#/$defs/rule-without-option"
        },
        "style-disabled": {
          "title": "Rule: style-disabled",
          "description": "'&lt;style'&gt; tags cannot be used.",
          "$ref": "#/$defs/rule-without-option"
        },
        "tag-pair": {
          "title": "Rule: tag-pair",
          "description": "Tag must be paired.",
          "$ref": "#/$defs/rule-without-option"
        },
        "tag-self-close": {
          "title": "Rule: tag-self-close",
          "description": "Empty tags must be self closed.",
          "$ref": "#/$defs/rule-without-option"
        },
        "tagname-lowercase": {
          "title": "Rule: tagname-lowercase",
          "description": "All html element names must be in lowercase.",
          "oneOf": [
            { "$ref": "#/$defs/severity" },
            { "$ref": "#/$defs/off-severity-array" },
            {
              "type": "array",
              "items": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/error-severity" },
                    { "$ref": "#/$defs/warning-severity" }
                  ]
                },
                {
                  "title": "Options",
                  "type": "object",
                  "properties": {
                    "exceptions": {
                      "title": "Option: exceptions",
                      "type": "array",
                      "items": "string"
                    }
                  }
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "tagname-specialchars": {
          "title": "Rule: tagname-specialchars",
          "description": "All html element names must not contain specialchars.",
          "$ref": "#/$defs/rule-without-option"
        },
        "tags-check": {
          "title": "Rule: tags-check",
          "description": "Checks html tags.",
          "oneOf": [
            { "$ref": "#/$defs/severity" },
            { "$ref": "#/$defs/off-severity-array" },
            {
              "type": "array",
              "items": [
                {
                  "oneOf": [
                    { "$ref": "#/$defs/error-severity" },
                    { "$ref": "#/$defs/warning-severity" }
                  ]
                },
                {
                  "title": "Options",
                  "type": "object",
                  "additionalProperties": {
                    "title": "HTML tag",
                    "type": "object",
                    "properties": {
                      "selfclosing": {
                        "title": "Option: selfclosing",
                        "description": "The tag must be selfclosing.",
                        "type": "boolean"
                      },
                      "redundantAttrs": {
                        "title": "Option: redundantAttrs",
                        "description": "The attr is redundant for tag and should be ommited.",
                        "type": "array",
                        "items": {
                          "title": "HTML attribute",
                          "type": "string"
                        }
                      },
                      "attrsRequired": {
                        "title": "Option: attrsRequired",
                        "description": "The tag must have attr with one value of given values.",
                        "type": "array",
                        "items": {
                          "title": "HTML attribute",
                          "type": "string"
                        }
                      },
                      "attrsOptional": {
                        "title": "Option: attrsOptional",
                        "description": "The tag must have optional attr with one value of given values.",
                        "type": "array",
                        "items": {
                          "type": "array",
                          "items": {
                            "title": "HTML attribute",
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              ],
              "minItems": 1,
              "maxItems": 2,
              "additionalItems": false
            }
          ]
        },
        "title-require": {
          "title": "Rule: title-require",
          "description": "'&lt;title'&gt; must be present in '&lt;head'&gt; tag.",
          "$ref": "#/$defs/rule-without-option"
        }
      },
      "additionalProperties": {
        "title": "Custom Rule",
        "oneOf": [
          { "$ref": "#/$defs/severity" },
          { "$ref": "#/$defs/off-severity-array" },
          {
            "type": "array",
            "items": [
              {
                "oneOf": [
                  { "$ref": "#/$defs/error-severity" },
                  { "$ref": "#/$defs/warning-severity" }
                ]
              },
              {
                "title": "Options",
                "type": "object"
              }
            ],
            "minItems": 1,
            "maxItems": 2,
            "additionalItems": false
          }
        ]
      }
    }
  }
}
